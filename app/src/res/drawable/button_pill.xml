<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <shape>
            <stroke android:width="@dimen/_1mdp" android:color="@color/e3" />
            <solid android:color="@color/colorAccent" />
            <corners android:radius="@dimen/_32mdp" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <stroke android:width="@dimen/_4mdp" android:color="@color/e3" />
            <solid android:color="@color/colorAccent" />
            <corners android:radius="@dimen/_32mdp" />
        </shape>
    </item>

</selector>